<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>pedals.ac</path>
  
  <animation>
    <object-name>pedalL</object-name>
    <object-name>pedalR</object-name>
    <object-name>base</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>pedalL</object-name>
    <property>/controls/flight/rudder</property>
    <factor> 15 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>pedalL</object-name>
    <property>/controls/gear/brake-left</property>
    <factor> -10 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>pedalR</object-name>
    <property>/controls/flight/rudder</property>
    <factor> -15 </factor>
    <center>
      <x-m> 0.02284 </x-m>
      <y-m> 0.00000 </y-m>
      <z-m> 0.00000 </z-m>
    </center> 
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>pedalR</object-name>
    <property>/controls/gear/brake-right</property>
    <factor> -10 </factor>
    <center>
      <x-m> 0.02284 </x-m>
      <y-m> 0.00000 </y-m>
      <z-m> 0.00000 </z-m>
    </center> 
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
</PropertyList>
