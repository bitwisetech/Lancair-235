<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- KI-229 RMI -->
<PropertyList>

  <path>hsi-source.ac</path>

  <animation>
    <object-name>switchbox</object-name>
    <object-name>NAV1BUTT</object-name>
    <object-name>NAV2BUTT</object-name>
    <object-name>GPSBUTT</object-name>
    <object-name>V1on</object-name>
    <object-name>V2on</object-name>
    <object-name>GPSon</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>switchbox</object-name>
    <object-name>NAV1BUTT</object-name>
    <object-name>NAV2BUTT</object-name>
    <object-name>GPSBUTT</object-name>
    <object-name>NAV1on</object-name>
    <object-name>NAV2on</object-name>
    <object-name>GPSon</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>NAV1BUTT</object-name>
    <object-name>NAV2BUTT</object-name>
    <object-name>GPSBUTT</object-name>
    <object-name>NAV1on</object-name>
    <object-name>NAV2on</object-name>
    <object-name>GPSon</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>NAV1on</object-name>
    <condition>
      <property>instrumentation/hsi-source/NAV1</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>NAV2on</object-name>
    <condition>
      <property>instrumentation/hsi-source/NAV2</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>GPSon</object-name>
    <condition>
      <property>instrumentation/hsi-source/GPS</property>
    </condition>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>NAV1BUTT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <!-- NAV1 on-->
        <property>instrumentation/hsi-source/NAV1</property>
        <value type="bool">true</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- NAV2 off-->
        <property>instrumentation/hsi-source/NAV2</property>
        <value type="bool">false</value>value
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- GPS off-->
        <property>instrumentation/hsi-source/GPS</property>
        <value type="bool">false</value>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>NAV2BUTT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <!-- NAV1 off -->
        <property>instrumentation/hsi-source/NAV1</property>
        <value type="bool">false</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- NAV2 on-->
        <property>instrumentation/hsi-source/NAV2</property>
        <value type="bool">true</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- GPS off-->
        <property>instrumentation/hsi-source/GPS</property>
        <value type="bool">false</value>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>GPSBUTT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <!-- NAV1 off -->
        <property>instrumentation/hsi-source/NAV1</property>
        <value type="bool">false</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- NAV2 off-->
        <property>instrumentation/hsi-source/NAV2</property>
        <value type="bool">false</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- GPS on -->
        <property>instrumentation/hsi-source/GPS</property>
        <value type="bool">true</value>
      </binding>
    </action>
  </animation>

</PropertyList>
